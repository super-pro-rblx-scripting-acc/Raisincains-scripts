--Raisincains banner loader
local ScreenGui = Instance.new("ScreenGui")
local Banner = Instance.new("ImageLabel")
local UICorner = Instance.new("UICorner")

    print("Thanks for executing!")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Banner.Name = "Banner"
Banner.Parent = ScreenGui
Banner.AnchorPoint = Vector2.new(0.5, 0.5)
Banner.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Banner.BorderSizePixel = 0
Banner.Position = UDim2.new(1, 0, -1, 0)
Banner.Size = UDim2.new(0.308008224, 0, 0.172018349, 0)
Banner.Image = "rbxassetid://13707594700"

UICorner.Parent = Banner
   
	local script = Instance.new('LocalScript', Banner)
    
	local ImageLabel = script.Parent
	local animationTime = 2 -- Total animation time in seconds
	local stayTime = 3 -- Time to stay in seconds
	local startPosition = UDim2.new(1, 0, -1, 0) -- Top right corner position
	local endPosition = UDim2.new(1, -350, 0, 75) -- Position to come down to
	
	local function bannerAnimation()
		-- Create the tween
		local tweenInfo = TweenInfo.new(animationTime, Enum.EasingStyle.Linear)
		local tween = game:GetService("TweenService"):Create(ImageLabel, tweenInfo, {Position = endPosition})
		tween:Play()
		wait(animationTime)
		wait(stayTime)
		local reverseTween = game:GetService("TweenService"):Create(ImageLabel, tweenInfo, {Position = startPosition})
		reverseTween:Play()
		wait(animationTime)
	
		
	end
	

	bannerAnimation()
